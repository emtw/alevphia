
<div class="content-box">
	<div id="form-shadow-top"><%= image_tag 'shadow-top.jpg', :alt => 'shadow' %></div>
	<div id="form-pref-content">
<br />
<h3>Edit the selected photo <% if photo.title.blank? %>&nbsp;<% else %>(<%= photo.title.gsub(/^(.{20}[\w.]*)(.*)/) {$2.empty? ? $1 : $1 + '...'} %>):<% end %></h3>

<%= form_for(@photo, :remote => true) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being updated:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field" id="display-photo">
    <%= image_tag photo.image_url.to_s %>
  </div>
  <div class="field">
    <%= f.label :photo_title %><br />
    <%= f.text_field :title, :size => 50 %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, :size => 50 %>
  </div>
  <div class="field">
    <%= f.label :uploaded_by %><br />
    <%= f.text_field :uploaded_by, :size => 50 %>
  </div>
  <div class="actions field">
    <%= f.submit "Update Photo", :class => "btn btn-success" %>
  </div>
<% end %>
</div>
<div id="form-shadow-bottom"><%= image_tag 'shadow-bottom.jpg', :alt => 'shadow' %></div>

</div>
