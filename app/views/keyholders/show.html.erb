<div class="content-box">
	<div id="form-shadow-top"><%= image_tag 'shadow-top.jpg', :alt => 'shadow' %></div>
	<div id="form-pref-content">
		<h1>Keyholder Account</h1>
		<br />

<p>
  <b>Username:</b>
  <%= @keyholder.username %>
</p>

<p>
  <b>Email:</b>
  <%= @keyholder.email %>
</p>

<p>
  <b>First name:</b>
  <%= @keyholder.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @keyholder.last_name %>
</p>

<p>
  <b>House:</b>
  <%= @keyholder.house %>
</p>

<p>
  <b>Postcode:</b>
  <%= @keyholder.postcode %>
</p>


<%= link_to 'Edit', edit_keyholder_path(@keyholder), :class => "btn btn-info" %>

</div>
<div id="form-shadow-bottom"><%= image_tag 'shadow-bottom.jpg', :alt => 'shadow' %></div>

</div>