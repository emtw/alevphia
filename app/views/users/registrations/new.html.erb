<div class="content-box">
	<div id="form-shadow-top"><%= image_tag 'shadow-top.jpg', :alt => 'shadow' %></div>
	<div id="form-pref-content">

<h2>Sign up</h2><br />

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
  <%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true %>
  </div>
  
  <div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email %>
  </div>
  
  <div class="field">
  <%= f.label :password %><br />
  <%= f.password_field :password %>
  </div>

  <div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="field">
    <%= f.label :first_name %> <%= f.label :middle_names, :id =>"user-middle-names" %> <%= f.label :last_name, :id => "user-last-name" %><br />
    <%= f.text_field :first_name %> <%= f.text_field :middle_names %> <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br />
    <%= f.date_select :date_of_birth, :order => [:day, :month, :year], start_year: 1900, end_year: Time.now.year - 17, default: 40.years.ago %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, ["", "Male", "Female"] %>
  </div>
  <div class="field">
    <%= f.label :first_line_of_address %><br />
    <%= f.text_field :line_1 %>
  </div>
  <div class="field">
    <%= f.label :second_line_of_address %><br />
    <%= f.text_field :line_2 %>
  </div>
  <div class="field">
    <%= f.label :third_line_of_address %><br />
    <%= f.text_field :line_3 %>
  </div>
  <div class="field">
    <%= f.label :town %><br />
    <%= f.text_field :town %>
  </div>
  <div class="field">
    <%= f.label :county %><br />
    <%= f.collection_select :county, COUNTIES, :to_s, :titleize, {:prompt => true} %>
  </div>
  <div class="field">
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode %>
  </div>
  <div class="field">
    <%= f.label :contact_number %><br />
    <%= f.text_field :contact_number %>
  </div>

  <div class="field">
  <%= f.submit "Sign up", :class => "btn btn-success" %>
  </div>
<% end %>
<br />
<%= render "users/shared/links" %>

</div>
<div id="form-shadow-bottom"><%= image_tag 'shadow-bottom.jpg', :alt => 'shadow' %></div>

</div>
